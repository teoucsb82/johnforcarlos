<% provide(:title, 'Confirm Donation') %>

<div class="hero-unit">
<h1><%= yield(:title) %></h1>
<hr>

<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <p>Amount: $<%= Fund.last.dollars %></p>
      <p>Email: <%= Fund.last.email %></p>
      
    </label>
  </article>
  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Donate to John for Carlos"
          data-amount="<%= Fund.last.dollars * 100 %>"></script>
<% end %>
</div>